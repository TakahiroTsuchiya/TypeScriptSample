{
    "compilerOptions": {
        "lib": ["es6"],
        "module": "commonjs",
        "outDir": "lib",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true,
        "noImplicitReturns": true,
        "sourceMap": true,
        "target": "es6",
        "types": [
            "node"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}